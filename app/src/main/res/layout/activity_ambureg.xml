<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background3"

        >


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="400dp"
            android:layout_height="65dp"
            android:layout_below="@+id/DRegi"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="#30FFFFFF"
            android:backgroundTint="@color/design_default_color_secondary"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/ptaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ptcpass"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#30ffffff"
            android:drawableLeft="@android:drawable/ic_input_get"
            android:drawablePadding="20dp"
            android:hint="EMS Certificate Number"
            android:inputType="text"
            android:padding="20dp"
            android:shadowColor="#4C1B1B"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505" />

        <EditText
            android:id="@+id/ptage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptaddress"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#30ffffff"
            android:drawableLeft="@android:drawable/ic_input_get"
            android:drawablePadding="20dp"
            android:hint="Licence Number"
            android:inputType="text"
            android:padding="20dp"
            android:shadowColor="#4C1B1B"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505" />

        <TextView
            android:id="@+id/DRegi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:shadowColor="#4C1B1B"
            android:text="Registration for Ambulance"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505"
            android:textSize="34sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/ptname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:hint="Driver Name"
            android:padding="20dp"
            android:shadowColor="#4C1B1B"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505" />

        <EditText
            android:id="@+id/ptmbno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptname"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#30ffffff"
            android:drawableLeft="@android:drawable/stat_sys_phone_call"
            android:drawablePadding="20dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="20dp"
            android:shadowColor="#4C1B1B"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505" />

        <EditText
            android:id="@+id/ptmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ptmbno"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#30ffffff"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:drawablePadding="20dp"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:shadowColor="#4C1B1B"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505" />

        <EditText
            android:id="@+id/ptpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptmail"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:hint="Password"
            android:inputType="text"
            android:padding="20dp"
            android:shadowColor="#4C1B1B"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505" />

        <EditText
            android:id="@+id/ptcpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptpass"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:hint="Confirm Password"
            android:inputType="text"
            android:padding="20dp"
            android:shadowColor="#4C1B1B"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505" />

        <EditText
            android:id="@+id/RCNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptage"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:hint="RC Number"
            android:inputType="text"
            android:padding="20dp"
            android:shadowColor="#4C1B1B"
            android:textColor="@color/black"
            android:textColorHighlight="#1F0B0B"
            android:textColorHint="#0B0505" />

        <EditText
            android:id="@+id/Oname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RCNum"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:hint="Owner Name"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="#0B0505"
            android:shadowColor="#4C1B1B"
            android:textColorHighlight="#1F0B0B" />

        <RadioGroup
            android:layout_width="136dp"
            android:layout_height="109dp"
            android:layout_below="@+id/Oname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="199dp">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Own"
                android:textColor="#141010" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rent"
                android:textColor="#100C0C" />

        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/regbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Oname"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="201dp"

            android:layout_marginEnd="173dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:text="REGISTER"
            android:textColor="#210E0E" />


    </RelativeLayout>

</ScrollView>